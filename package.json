    "openapi3-ts": "^4.4.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.4.3",
    "pm2-metrics": "^1.0.47",
    "prom-client": "12",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "swagger-stats": "^0.99.7",
    "swagger-ui-express": "^5.0.1",
    "ts-json-schema-generator": "^2.4.0",
    "ts-morph": "^25.0.1",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.30.1",
    "uuid": "^11.1.0",
    "uuidv4": "^6.2.13",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "moduleNameMapper": {
      "^@otl/common$": "<rootDir>/libs/common/src",
      "^@otl/common/(.*)$": "<rootDir>/libs/common/src/$1",
      "^@otl/server-nest/(.*)$": "<rootDir>/apps/server/src/$1",
      "^@otl/prisma-client/(.*)$": "<rootDir>/libs/prisma-client/src/$1"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
