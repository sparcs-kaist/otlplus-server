{
  "name": "@otl/monorepo",
  "private": true,
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@1.22.17",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build:all": "nest build server && nest build scholar-sync",
    "build:server": "nest build server",
    "build:scholar-sync": "nest build scholar-sync",
    "build:prisma-client": "nest build prisma-client",
    "build:common": "nest build common",
    "start:server:local": "cross-env NODE_ENV=local nest start server --watch",
    "pm2-start:server:local": "cross-env NODE_ENV=local pm2 start ecosystem.config.js --only @otl/server-nest  --node-args=\"max-old-space-size=40920\"",
    "start:server:dev": "cross-env NODE_ENV=dev nest start server",
    "start:server:debug": "nest start server --debug --watch",
    "start:server:prod": "cross-env NODE_ENV=prod node dist/apps/server/bootstrap/bootstrap.js",
    "start:scholar-sync:local": "cross-env NODE_ENV=local nest start scholar-sync --watch",
    "start:scholar-sync:dev": "cross-env NODE_ENV=dev nest start scholar-sync",
    "start:scholar-sync:debug": "nest start server --debug --watch",
    "start:scholar-sync:prod": "cross-env NODE_ENV=prod node dist/apps/scholar-sync/bootstrap/bootstrap.js",
    "db:push": "dotenv -e env/.env.local -- npx prisma db push",
    "db:pull": "dotenv -e env/.env.local -- npx prisma db pull --schema ./libs/prisma/src/schema.prisma",
    "db:init": "dotenv -e env/.env.local -- npx prisma db execute --file ./libs/prisma/src/migrations/0_init/migration.sql --schema src/prisma/schema.prisma && dotenv -e env/.env.local -- npx prisma migrate resolve --applied 0_init",
    "db:execute": "dotenv -e env/.env.local -- npx prisma db execute --schema ./libs/prisma/src/schema.prisma --file",
    "migrate:create:dev": "dotenv -e env/.env.dev -- npx prisma migrate dev --schema ./libs/prisma/src/schema.prisma --create-only ",
    "migrate:dev": "dotenv -e env/.env.dev -- npx prisma migrate dev --schema ./libs/prisma/src/schema.prisma",
    "migrate:create:local": "dotenv -e env/.env.local -- npx prisma migrate dev --schema ./libs/prisma/src/schema.prisma --create-only ",
    "migrate:local": "dotenv -e env/.env.local -- npx prisma migrate dev --schema ./libs/prisma/src/schema.prisma",
    "migrate:deploy:local": "dotenv -e env/.env.local -- npx prisma migrate deploy --schema ./libs/prisma/src/schema.prisma",
    "migrate:deploy:dev": "dotenv -e env/.env.dev -- npx prisma migrate deploy --schema ./libs/prisma/src/schema.prisma",
    "migrate:status:local": "dotenv -e env/.env.local -- npx prisma migrate status",
    "migrate:status:dev": "dotenv -e env/.env.dev -- npx prisma migrate status",
    "migrate:resolve:local": "dotenv -e env/.env.local -- npx prisma migrate resolve",
    "migrate:resolve:dev": "dotenv -e env/.env.dev -- npx prisma migrate resolve",
    "client:generate": "npx prisma generate --schema ./libs/prisma-client/src/schema.prisma",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:check": "eslint .",
    "test": "dotenv -e env/.env.test -- jest --maxWorkers 1",
    "test:watch": "dotenv -e env/.env.test -- jest --watch",
    "test:cov": "dotenv -e env/.env.test -- jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prepare": "husky",
    "ts-node": "cross-env NODE_ENV=local node -r ts-node/register -r tsconfig-paths/register "
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.24.0",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/express": "^5.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.3",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@nestjs-cls/transactional": "^2.4.4",
    "@nestjs-cls/transactional-adapter-prisma": "^1.2.7",
    "@nestjs/cli": "^10.4.9",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/schedule": "^4.1.2",
    "@nestjs/swagger": "^8.1.0",
    "@prisma/client": "^6.1.0",
    "@slack/web-api": "^7.8.0",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/csurf": "^1.11.5",
    "@types/express-session": "^1.18.1",
    "@types/k6": "^0.54.2",
    "@types/morgan": "^1.9.9",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/sharp": "^0.32.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "canvas": "^3.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "cron-validator": "^1.3.1",
    "csurf": "^1.11.0",
    "date-fns": "^4.1.0",
    "deepl-node": "^1.17.0",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "enquirer": "^2.4.1",
    "eslint-plugin-prettier": "^5.2.6",
    "express-session": "^1.18.1",
    "ical-generator": "^8.0.1",
    "k6": "^0.0.0",
    "moment-timezone": "^0.5.46",
    "morgan": "^1.10.0",
    "nest-winston": "^1.10.2",
    "nestjs-cls": "^4.5.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.4.3",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.1",
    "ts-morph": "^25.0.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*": "prettier --ignore-unknown --write"
  }
}
