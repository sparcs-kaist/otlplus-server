{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,

    "paths": {
      "@otl/common": ["libs/common/src"],
      "@otl/common/*": ["libs/common/src/*"],
      "@otl/prisma-client": ["libs/prisma-client/src"],
      "@otl/prisma-client/*": ["libs/prisma-client/src/*"],
      "@otl/rmq": ["libs/rmq/src"],
      "@otl/rmq/*": ["libs/rmq/src/*"],
      "@otl/server-nest/": ["apps/server/src"],
      "@otl/server-nest/*": ["apps/server/src/*"],
      "@otl/scholar-sync/": ["apps/scholar-sync/src"],
      "@otl/scholar-sync/*": ["apps/scholar-sync/src/*"],
      "@otl/scholar-sync/domain": ["apps/scholar-sync/src/common/domain"],
      "@otl/scholar-sync/domain/*": ["apps/scholar-sync/src/common/domain/*"],
      "@otl/scholar-sync/clients/scholar/*": ["apps/scholar-sync/src/clients/scholar/*"],
      "@otl/notification-consumer/*": ["apps/notification-consumer/src/*"],
      "@otl/notification-consumer/domain": ["apps/notification-consumer/src/domain"],
      "@otl/notification-consumer/domain/*": ["apps/notification-consumer/src/domain/*"]
    },

    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "plugins": [
    {
      "name": "@nestjs/swagger/plugin"
    }
  ]
}
