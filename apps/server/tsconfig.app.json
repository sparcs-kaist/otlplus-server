{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "../../dist/apps/server",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@otl/server-nest": ["src"],
      "@otl/server-nest/*": ["src/*"],
      "@otl/prisma-client": ["../../libs/prisma-client/src"],
      "@otl/prisma-client/*": ["../../libs/prisma-client/src/*"],
      "@otl/rmq": ["../../libs/rmq/src"],
      "@otl/rmq/*": ["../../libs/rmq/src/*"],
      "@otl/common": ["../../libs/common/src"],
      "@otl/common/*": ["../../libs/common/src/*"],
      "@otl/elasticsearch-client": ["../../libs/elasticsearch-client/src"],
      "@otl/elasticsearch-client/*": ["../../libs/elasticsearch-client/src/*"],
      "@otl/scholar-sync/domain": ["../../apps/scholar-sync/src/common/domain"],
      "@otl/scholar-sync/domain/*": ["../../apps/scholar-sync/src/common/domain/*"],
      "@otl/scholar-sync/clients/scholar/*": ["../../apps/scholar-sync/src/clients/scholar/*"],
      "@otl/notification-consumer/*": ["../../apps/notification-consumer/src/*"],
      "@otl/server-consumer/*": ["../../apps/server-consumer/src/*"]
    },
    "assets": [
      {
        "include": "docs/swagger.json"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "volumes", "volumes/**", "**/volumes/**"],
  "references": [],
  "plugins": [
    {
      "name": "@nestjs/swagger/plugin"
    }
  ]
}
